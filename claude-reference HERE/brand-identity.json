    "patterns": {
      "gridLineReveal": {
        "property": "transform",
        "from": "scaleY(0) or scaleX(0)",
        "to": "scaleY(1) or scaleX(1)",
        "duration": "1s",
        "easing": "cubic-bezier(0.16, 1, 0.3, 1)",
        "staggerDelay": "0.1s"
      },
      "wordFadeIn": {
        "from": {
          "opacity": 0,
          "transform": "translateY(20px)"
