        "to": {
          "opacity": 1,
          "transform": "translateY(0)"
        },
        "duration": "0.8s",
        "easing": "ease"
      },
      "sectionTransition": {
        "property": "opacity, transform",
        "from": {
          "opacity": 0,
          "transform": "translateY(30px)"
        },
        "to": {
          "opacity": 1,
          "transform": "translateY(0)"
        },
        "duration": "0.6s",
        "easing": "ease"
