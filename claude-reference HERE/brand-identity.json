        "duration": "0.8s",
        "easing": "ease-in-out"
      },
      "scrollLineMove": {
        "keyframes": "top -30% to 100%",
        "duration": "2s",
        "easing": "ease-in-out",
        "iteration": "infinite"
      },
      "spotlightExpand": {
        "vertical": {
          "from": "95px",
          "to": "500px",
          "scrollDistance": "150px"
        },
        "horizontal": {
          "from": "214px",
          "to": "2000px",
          "scrollDistance": "300px"
        }
      }
    },
    "transitions": {
      "default": "all 0.3s ease",
      "button": "all 0.3s ease",
      "buttonFast": "0.1s background-color linear, 0.1s color linear",
      "nav": "top 0.3s ease",
      "opacity": "opacity 0.5s ease"
    }
